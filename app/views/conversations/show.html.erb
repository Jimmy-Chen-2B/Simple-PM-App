<h1>Chatting with <%= @conversation.with(current_user).name %></h1>

<div id="conversation-main">
  <div id="conversation-body">
    <%= render @conversation.personal_messages %>
  </div>

  <%= form_for @personal_message do |form| %>
    <%= form.hidden_field :conversation_id, value: @conversation.id %>
    <%= form.label :body, "訊息" %>
    <%= form.text_field :body %>

    <%= form.submit %>
  <% end %>
</div>

